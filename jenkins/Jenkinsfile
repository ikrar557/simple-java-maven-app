node {
    stage('Checkout') {
        checkout scm
    }
    
    docker.image('maven:3.9.9').inside('-p 8080:8080 -e MAVEN_OPTS="-Dspring.profiles.active=default"') {
        stage('Build') {
            sh 'mvn -B -DskipTests clean package'
        }
        
        stage('Test') {
            try {
                sh 'mvn test'
            } finally {
                junit 'target/surefire-reports/*.xml'
            }
        }
        
        stage('Manual Approval') {
            input message: 'Deploy to EC2?', ok: 'Deploy'
        }
        
        stage('Deploy to EC2') {
            withCredentials([sshUserPrivateKey(credentialsId: 'ec2-ssh-key', keyFileVariable: 'SSH_KEY')]) {
                def jarFile = sh(script: 'ls target/*.jar', returnStdout: true).trim()
                
                // Copy JAR file to EC2
                sh """
                    scp -i ${SSH_KEY} -o StrictHostKeyChecking=no \
                    ${jarFile} ubuntu@3.25.53.27:/home/ubuntu/app.jar
                """
                
                // Start application on EC2
                sh """
                    ssh -i ${SSH_KEY} -o StrictHostKeyChecking=no ubuntu@3.25.53.27 '
                    pkill -f app.jar || true
                    nohup java -jar /home/ubuntu/app.jar > app.log 2>&1 &
                    '
                """
                
                echo 'Application deployed to EC2 successfully'
            }
        }
    }
}
